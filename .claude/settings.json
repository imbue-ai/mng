{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv sync --all-packages"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "touch .claude/active"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/claude_prevent_commit_rewrite.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "rm -rf .claude/active"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -e .git ] || { echo \"You should never change directories! Return to the repo root\" >&2; exit 2; }"
          }
        ]
      }
    ]
  },
  "model": "opus[1m]",
  "statusLine": {
    "type": "command",
    "command": "./scripts/claude_status_line.sh"
  }
}

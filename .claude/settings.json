{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv sync --all-packages"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/claude_prevent_commit_rewrite.sh"
          }
        ]
      }
    ]
  },
  "Stop": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "[ -e .git ] || { echo \"Be sure to return to the repo root when you finish! Otherwise the other stop hooks cannot run correctly.\" >&2; exit 2; }"
        }
      ]
    }
  ],
  "model": "opus[1m]",
  "statusLine": {
    "type": "command",
    "command": "./scripts/claude_status_line.sh"
  }
}
